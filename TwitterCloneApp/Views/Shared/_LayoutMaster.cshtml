<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        .navbar-brand {
            position: absolute;
            width: 100%;
            left: 0;
            margin: 0 auto;
            text-align: center;
        }
    </style>
</head>
<body>
    @if (!string.IsNullOrEmpty(Session["username"].ToString()))
    {
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid ">
                <div class="navbar-collapse collapse">

                    <a class="navbar-brand text-center" href="#">My Twitter Clone</a>
                    <div class="navbar-collapse collapse">
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav navbar-right">
                                @*<li>@Html.Label("Welcome " + Session["fullname"] + " !")</li>*@
                                <li>@Html.ActionLink("Welcome " + Session["username"] + " !", "UserProfile", "Account", new { username = Session["username"].ToString() }, null)</li>
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Profile", "UserProfile", "Account", new { username = Session["username"].ToString()}, null)</li>
                                <li>@Html.ActionLink("Signout", "Signout", "Account")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
